let etapeActuelle = 0;

function filtrer(numero) {

  if (numero === etapeActuelle + 1) {
    etapeActuelle++;

    let message = "";

    if (etapeActuelle === 1)
      message = "Les graviers arrÃªtent les gros dÃ©chets.";
    if (etapeActuelle === 2)
      message = "Le sable grossier bloque les particules plus petites.";
    if (etapeActuelle === 3)
      message = "Le sable fin filtre la poussiÃ¨re restante.";
    if (etapeActuelle === 4)
      message = "Le charbon enlÃ¨ve les odeurs et produits chimiques.";
    if (etapeActuelle === 5)
      message = "Le coton termine la filtration : lâ€™eau devient claire.";

    document.getElementById("etatEau").innerHTML =
      "âœ… Ã‰tape " + etapeActuelle + " terminÃ©e<br>" + message;

    if (etapeActuelle === 5) {
      document.getElementById("etatEau").innerHTML =
        "ğŸ‰ Bravo ! Lâ€™eau est filtrÃ©e et beaucoup plus propre !";
    }

  } else {
    alert("âš ï¸ Clique sur les Ã©tapes dans le bon ordre !");
  }
}

function recommencer() {
  etapeActuelle = 0;
  document.getElementById("etatEau").innerHTML = "ğŸ’§ Eau sale";
